<!DOCTYPE html>
<html lang="en">
    <head>
        <%- include('../partials/head') %>
    </head>
    <body >
        <header>
            <%- include('../partials/header') %>
        </header>
        <main class="flex flex-col items-center">
            <h1 class="text-4xl font-extrabold leading-loose px-4">
                Edit an Employee</h1>
            <form action="/employees/edit" method="POST">
                <h2 class="text-2xl py-2">Description</h2>
                Id:<br>
                <input type="hidden"
                    name="id"
                    value="<%=result.data.id%>">
                <input class="bg-black text-white"
                    type="text"
                    name="description"
                    value="<%=result.data.description%>"
                    placeholder="Enter in the format Aaaa"
                    pattern="[A-Z]{1}[A-Za-z ]{1,}"
                    maxlength="20"
                    required
                    autofocus
                ><br>
                <h2 class="text-2xl py-2">Hire Price</h2>
                <input class="bg-black text-white"
                    type="number"
                    min="0"
                    max="100"
                    step="0.5"
                    name="hire_price"
                    value="<%=result.data.hire_price%>"
                    placeholder="Between 0 and 100"
                    required
                ><br><br>
                <input type="submit" value="Submit"
                    class="px-2 py-2 text-2xl">
            </form>
            <% if (typeof errorMessage!= "undefined"){ %>
            <div role="alert">
                &nbsp;<div
                    class="text-2xl bg-red-500 text-white
                    font-bold rounded-t px-4 py-2">
                    Error - <%= errorMessage %>
                </div>&nbsp;
            </div>
            <% } %>
            </div>
        </main>
        <footer>
            <%- include('../partials/footer') %>
        </footer>
    </body>
</html>